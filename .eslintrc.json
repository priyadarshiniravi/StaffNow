{
  "extends": "airbnb",
  "plugins": [
	"react",
	"jest",
	"jasmine"
  ],
  "env": {
	"jest/globals": true,
	"jasmine": true
  },
  "rules": {
	"object-curly-spacing": [
	  "error",
	  "never"
	],
	"indent": [
	  "error",
	  "tab"
	],
	"react/jsx-indent": [
	  "off",
	  "tab"
	],
	"no-tabs": "off",
	"jsx-a11y/anchor-is-valid": [
	  "error",
	  {
		"components": [
		  "Link"
		],
		"specialLink": [
		  "to"
		],
		"aspects": [
		  "noHref",
		  "invalidHref",
		  "preferButton"
		]
	  }
	],
	"import/no-extraneous-dependencies": [
	  "error",
	  {
		"devDependencies": true
	  }
	]
  }
}
